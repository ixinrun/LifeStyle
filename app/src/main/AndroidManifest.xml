<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.toperc.lifestyle">

    <!-- 电源管理权限 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.toperc.lifestyle.ui.SplashActivity" android:screenOrientation="portrait" android:theme="@style/StartAPPTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.toperc.lifestyle.ui.MainActivity" android:launchMode="singleTask"/>

        <service
            android:name="com.toperc.lifestyle.widget.stepdetector.StepCounterService"
            android:exported="false"
            android:priority="1000" />

    </application>

</manifest>